powershell -Command "$outputPath = \"$env:USERPROFILE\Desktop\report.txt\"; $totalDiskCapacity = (Get-CimInstance -ClassName Win32_LogicalDisk | Measure-Object -Property Size -Sum).Sum / 1GB; $cpuName = (Get-CimInstance -ClassName Win32_Processor).Name; $designedCapacity = (Get-WmiObject -Class BatteryStaticData -Namespace ROOT\WMI).DesignedCapacity; $fullChargedCapacity = (Get-WmiObject -Class BatteryFullChargedCapacity -Namespace ROOT\WMI).FullChargedCapacity; $capacityPercentage = ($fullChargedCapacity / $designedCapacity) * 100; $totalPhysicalMemory = (Get-CimInstance -ClassName Win32_PhysicalMemory | Measure-Object -Property Capacity -Sum).Sum / 1GB; $totalDiskCapacity = (Get-CimInstance -ClassName Win32_LogicalDisk | Measure-Object -Property Size -Sum).Sum / 1GB; $systemManufacturer = (Get-WmiObject -Class Win32_ComputerSystem).Manufacturer; $serialNumber = (Get-WmiObject -Class Win32_BIOS).SerialNumber; $output = \"cpu_name=$cpuName`nsystem_manufacturer=$systemManufacturer`nserial_number=$serialNumber`ndesigned_capacity=$designedCapacity`ntotalDiskCapacity=$totalDiskCapacity`nfull_charged_capacity=$fullChargedCapacity`ncapacity_percentage=$capacityPercentage%`ntotal_physical_memory=$totalPhysicalMemory MB`nproduct_type=laptop\"; if (Test-Path $outputPath) {Add-Content -Path $outputPath -Value $output} else {$output | Out-File -FilePath $outputPath}"
